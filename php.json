	// }


	"Comment Big": {
		"prefix": "comment-big",
		"body": [
			"/********************************************************",
			"**  COMMENT",
			"********************************************************/"
		],
		"description": "Custom print-r for logged in users"
	},

	"Print-r Logged In": {
		"prefix": "print-r-loggedin",
		"body": [
			"if( is_user_logged_in() ) {",
				"echo '<pre style=\"z-index: 999; position: relative; background: #f9f9f9; direction: ltr; text-align: left;\"> NAME:'.\"<br>\";",
				"print_r($$xxx);",
				"echo '</pre>'.\"<br>\";",
			"}"
		],
		"description": "Custom print-r for logged in users"
	},

	"Print-r Everyone": {
		"prefix": "print-everyone",
		"body": [
			"echo '<pre style=\"z-index: 999; position: relative; direction: ltr; text-align: left;\"> NAME:'.\"<br>\";",
			"print_r($$xxx);",
			"echo '</pre>'.\"<br>\";",
		],
		"description": "Custom print-r for everyone"
	}, 

	"Easy Echo": {
		"prefix": "echo-smart",
		"body": [
			"echo \"Name: \".$$var.\"<br>\";",
		],
		"description": "Easy echo with variable and name"
	},



	"jQuery Wrap": {
		"prefix": "jquery-wrap",
		"body": [
			"jQuery(function($){",
			" ",
			"});"
		],
		"description": "Log output to console"
	},

	"jQuery On Load": {
		"prefix": "jquery-on-load",
		"body": [
			"jQuery(document).ready(function($) {",
			" ",
			"});"
		],
		"description": "Log output to console"
	},

	"Conole Log": {
		"prefix": "console-log",
		"body": [
			"console.log('newVal' + newVal);"
		],
		"description": "Log output to console"
	},

	"Not Empty": {
		"prefix": "empty_not",
		"body": [
			"( !empty($xxx) ? $xxxx : $yyy )"
		],
		"description": "easy check that a variable isnt empty"
	},

	"Easy Foreach": {
		"prefix": "foreach_snippet",
		"body": [
			"$$result = '';",
			"if( !empty($$xxx) ) {",
			"    foreach($$xxx as $$xxx) {",
			"        $$result = '';",
			"    }",
			"};"
		],
		"description": "easy check that a variable isnt empty"
	},

	"ACF Title": {
		"prefix": "acftitle",
		"body": [
			"acfield_title()"
		],
		"description": "acf custom title field"
	},

	"ACF Image": {
		"prefix": "acfimg",
		"body": [
			"acfield_img($$imgvar, 'img-fluid')"
		],
		"description": "acf custom image field"
	},

	"Same Frame Grid": {
		"prefix": "same-frame-grid",
		"body": [
			"<div class=\"same-frame-grid\">",
				"<div class=\"grid-child bglry\">",
				"",
				"</div>",
				"<div class=\"grid-child txtlyr\">",
				"",
				"</div>",
			"</div>"
		],
		"description": "works with related grid css"
	},
